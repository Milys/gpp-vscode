{
    "name": "gpp-language",
    "displayName": "gpp-language",
    "description": "Syntax highlighter for SolidCam .gpp language",
    "version": "0.2.0",
    "publisher": "ML",
    "engines": {
        "vscode": "^1.19.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Milys/gpp-vscode.git"
    },
    "categories": [
        "Languages"
    ],
    "icon": "Images/icon_GPP.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "contributes": {
        "languages": [
            {
                "id": "gpp",
                "aliases": [
                    "GPP",
                    "gpp",
                    "SolidCam",
                    "syntax",
                    "highlighter",
                    "language"
                ],
                "extensions": [
                    ".gpp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gpp",
                "scopeName": "source.gpp",
                "path": "./syntaxes/gpp.tmLanguage.json"
            }
        ]
    }
}